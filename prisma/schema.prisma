generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ForecastCurrent {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  region    String
  country   String
  date      String
  maxtemp_c Int
  maxtemp_f Int
  mintemp_c Int
  mintemp_f Int
  avgtemp_c Int
  avgtemp_f Int

  @@map("forecastCurrent")
}

